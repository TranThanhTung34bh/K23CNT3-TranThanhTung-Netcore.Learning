@model TranThanhTung_2310900115.Models.TttEmployee

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-primary">Sửa thông tin nhân viên</h1>

<h4 class="mb-3">TttEmployee</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="TttEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TttEmpId" />

            <div class="mb-3">
                <label asp-for="TttEmpName" class="form-label"></label>
                <input asp-for="TttEmpName" class="form-control" />
                <span asp-validation-for="TttEmpName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TttEmpLevel" class="form-label"></label>
                <input asp-for="TttEmpLevel" class="form-control" />
                <span asp-validation-for="TttEmpLevel" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TttEmpStartDate" class="form-label"></label>
                <input asp-for="TttEmpStartDate" class="form-control" />
                <span asp-validation-for="TttEmpStartDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TttEmpStatus" class="form-label"></label>
                <input asp-for="TttEmpStatus" class="form-control" />
                <span asp-validation-for="TttEmpStatus" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a asp-action="TttIndex" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
